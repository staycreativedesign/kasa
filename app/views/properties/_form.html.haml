    = f.label :has_garage
    %br/
    = f.check_box :has_garage
    %br/
  :javascript
    $(document).ready(function(){
        $('input[name="property[has_garage]"]').click(function(){
          if($(this).attr("value")=="1"){
          $("#property_garage_size").toggle();
          }
          });
        });
  #property_garage_size.field{:style => "display:none;"}
    = f.label :garage_size
    %br/
    = f.number_field :garage_size
  .field
    = f.label :favorited
    %br/
    = f.number_field :favorited
  .field
