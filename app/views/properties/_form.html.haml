    = f.text_field :street_name
  .field
    = f.label :unit_number
    %br/
    = f.text_field :unit_number
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :zip
    %br/
    = f.number_field :zip
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .field
    = f.label :full_address
    %br/
    = f.text_field :full_address
